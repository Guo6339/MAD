<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="@drawable/wallpaper5"
        >

        <Button
            android:id="@+id/compareNumbersButton"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_centerInParent="true"
            android:onClick="goToCompareNumbers"
            android:text="Compare Numbers"
            android:layout_marginTop="400px"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />


        <Button
            android:id="@+id/orderNumbersButton"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/compareNumbersButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="goToOrderingNumbers"
            android:text="Order Numbers" />

        <Button
            android:id="@+id/composeNumbersButton"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderNumbersButton"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="bottom|center_horizontal"
            android:onClick="goToComposingNumbers"
            android:text="Compose Numbers" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


